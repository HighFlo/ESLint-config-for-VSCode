{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript/space", "plugin:unicorn/all", "airbnb-base"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-new-native-nonconstructor": "off",
        "@typescript-eslint/object-curly-spacing": "off",
        "no-empty-static-block": "off",
        "no-console": "off",
        "no-constant-binary-expression": "off",
        "indent": "off",
        "linebreak-style": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
